/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "imx28.dtsi"

/ {
	model = "TQ Energy Manager 300";
	compatible = "tqs,energymanager300", "fsl,imx28";

	memory {
		reg = <0x40000000 0x08000000>;
	};

	apb@80000000 {
		apbh@80000000 {
			ssp1: ssp@80012000 {
				compatible = "fsl,imx28-mmc";
				pinctrl-names = "default";
				pinctrl-0 = <&mmc1_8bit_pins_a
						&mmc1_cmd_cfg
						&mmc1_sck_cfg>;
				bus-width = <8>;
				non-removable;
				dsr = <0x0100>;
				vmmc-supply = <&reg_vddio_sd0>;
				status = "okay";
			};

			ssp2: ssp@80014000 {
				compatible = "fsl,imx28-spi";
				pinctrl-names = "default";
				pinctrl-0 = <&spi2_pins_c>;
				status = "okay";

				spidev0: spi@0 {
					compatible = "tqs,teridian";
					reg = <0>;
					spi-max-frequency = <1000000>;
				};
			};

			pinctrl@80018000 {
				pinctrl-names = "default";
				pinctrl-0 = <&hog_pins_a>;

				hog_pins_a: hog@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_LCD_D00__GPIO_1_0

						MX28_PAD_SAIF1_SDATA0__GPIO_3_26
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				mmc1_8bit_pins_a: mmc1-8bit@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_GPMI_D00__SSP1_D0
						MX28_PAD_GPMI_D01__SSP1_D1
						MX28_PAD_GPMI_D02__SSP1_D2
						MX28_PAD_GPMI_D03__SSP1_D3
						MX28_PAD_GPMI_D04__SSP1_D4
						MX28_PAD_GPMI_D05__SSP1_D5
						MX28_PAD_GPMI_D06__SSP1_D6
						MX28_PAD_GPMI_D07__SSP1_D7
					>;
				fsl,drive-strength = <MXS_DRIVE_4mA>;
				fsl,voltage = <MXS_VOLTAGE_HIGH>;
				fsl,pull-up = <MXS_PULL_ENABLE>;
				};

				mmc1_cmd_cfg: mmc1-cmd-cfg {
					fsl,pinmux-ids = <MX28_PAD_GPMI_RDY1__SSP1_CMD>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};

				mmc1_sck_cfg: mmc1-sck-cfg {
					fsl,pinmux-ids = <MX28_PAD_GPMI_WRN__SSP1_SCK>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
				};

				led_pins_a: led_gpio@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_LCD_D18__GPIO_1_18
						MX28_PAD_LCD_D19__GPIO_1_19
						MX28_PAD_LCD_D20__GPIO_1_20
						MX28_PAD_LCD_D21__GPIO_1_21
						MX28_PAD_LCD_D22__GPIO_1_22
						MX28_PAD_LCD_D23__GPIO_1_23
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				spi2_pins_c: teridian@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_SSP0_DATA4__SSP2_D0
						MX28_PAD_SSP0_DATA5__SSP2_D3
						MX28_PAD_SSP0_DATA6__SSP2_CMD
						MX28_PAD_SSP0_DATA7__SSP2_SCK
						MX28_PAD_SSP2_SS2__GPIO_2_21
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};
			};
		};

		apbx@80040000 {
			lradc0: lradc@80050000 {
				status = "okay";
			};

			i2c0: i2c@80058000 {
				pinctrl-names = "default";
				pinctrl-0 = <&i2c0_pins_a>;
				clock-frequency = <400000>;
				status = "okay";

				eeprom@50 {
					compatible = "atmel,24c32";
					reg = <0x50>;
					read-only;
				};

				rtc@68 {
					compatible = "dallas,ds1337";
					reg = <0x68>;
				};
			};

			duart: serial@80074000 {
				pinctrl-names = "default";
				pinctrl-0 = <&duart_pins_a>;
				status = "okay";
			};

			auart0: serial@8006a000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart0_2pins_a>;
				status = "okay";
			};

			usbphy1: usbphy@8007e000 {
				status = "okay";
			};
		};
	};

	ahb@80080000 {
		usb1: usb@80090000 {
			vbus-supply = <&reg_5p0v>;
			disable-over-current;
			dr_mode = "host";
			status = "okay";
		};

		mac0: ethernet@800f0000 {
			phy-mode = "rmii";
			pinctrl-names = "default";
			pinctrl-0 = <&mac0_pins_a>;
			phy-supply = <&reg_3p3v>;
			phy-reset-gpios = <&gpio1 0 0>;
			phy-reset-duration = <100>;
			clocks = <&clks 57>, <&clks 57>;
			clock-names = "ipg", "ahb";
			status = "okay";
		};
	};

	regulators {
		compatible = "simple-bus";

		reg_5p0v: 5p0v {
			compatible = "regulator-fixed";
			regulator-name = "5P0V";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			regulator-always-on;
		};

		reg_3p3v: 3p3v {
			compatible = "regulator-fixed";
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};

		reg_vddio_sd0: vddio-sd0 {
			compatible = "regulator-fixed";
			regulator-name = "vddio-sd0";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&led_pins_a>;

		status_green {
			label = "energymanager:green:status";
			gpios = <&gpio1 18 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		status_red {
			label = "energymanager:red:status";
			gpios = <&gpio1 19 GPIO_ACTIVE_HIGH>;
		};

		network_green {
			label = "energymanager:green:network";
			gpios = <&gpio1 20 GPIO_ACTIVE_HIGH>;
		};

		network_red {
			label = "energymanager:red:network";
			gpios = <&gpio1 21 GPIO_ACTIVE_HIGH>;
		};

		sensor_green {
			label = "energymanager:green:sensor";
			gpios = <&gpio1 22 GPIO_ACTIVE_HIGH>;
		};

		sensor_red {
			label = "energymanager:red:sensor";
			gpios = <&gpio1 23 GPIO_ACTIVE_HIGH>;
		};

		cms_disable {
			label = "rs485:cms_disable";
			gpios = <&gpio3 26 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
	};

	buttons {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		reset {
			label = "Reset";
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};
};
