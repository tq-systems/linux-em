/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include "imx28.dtsi"

/ {
	model = "TQ Energy Manager 310";
	compatible = "tq,em310", "fsl,imx28";

	aliases {
		spi0 = &ssp3;

		serial0 = &duart;
		serial1 = &auart4;
		serial2 = &auart0;
		/delete-property/ serial4;

		ethernet1 = &lan1;
		mdio-gpio0 = &mdio_gpio0;
	};

	memory@40000000 {
		device_type = "memory";
		reg = <0x40000000 0x08000000>;
	};

	buttons {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&buttons>;

		reset-button {
			label = "Reset";
			gpios = <&gpio3 4 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&led_pins_a>;

		led-gn-1 {
			gpios = <&gpio2 16 GPIO_ACTIVE_HIGH>;
			label = "energymanager:green:status";
			linux,default-trigger = "timer";
		};

		led-rd-1 {
			gpios = <&gpio2 17 GPIO_ACTIVE_HIGH>;
			label = "energymanager:red:status";
		};

		led-gn-2 {
			gpios = <&gpio2 18 GPIO_ACTIVE_HIGH>;
			label = "energymanager:green:network";
		};

		led-rd-2 {
			gpios = <&gpio2 19 GPIO_ACTIVE_HIGH>;
			label = "energymanager:red:network";
		};

		led-gn-3 {
			gpios = <&gpio2 20 GPIO_ACTIVE_HIGH>;
			label = "energymanager:green:sensor";
		};

		led-rd-3 {
			gpios = <&gpio2 21 GPIO_ACTIVE_HIGH>;
			label = "energymanager:red:sensor";
		};
	};

	mdio_gpio0: mdio {
		compatible = "microchip,mdio-smi0";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&mac0_smi_pins_a>,
			    <&mac0_enet_reset>,
			    <&mac0_enet_int>;

		gpios = <&gpio4 0 GPIO_ACTIVE_HIGH>,
			<&gpio4 1 GPIO_ACTIVE_HIGH>;

		switch@0 {
			compatible = "microchip,ksz8863";
			reg = <0>;
			interrupt-parent = <&gpio0>;
			interrupts = <6 IRQ_TYPE_LEVEL_LOW>;
			reset-gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;
			microchip,io-drive-strength-microamp = <8000>;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				lan0: port@0 {
					reg = <0>;
					label = "lan0";
					phy-mode = "internal";
				};

				lan1: port@1 {
					reg = <1>;
					label = "lan1";
					phy-mode = "internal";
				};

				port@2 {
					reg = <2>;
					label = "cpu";
					ethernet = <&mac0>;
					phy-mode = "rmii";
					microchip,rmii-clk-internal;

					fixed-link {
						speed = <100>;
						full-duplex;
					};
				};
			};
		};
	};

	reg_3p3v: 3p3v {
		compatible = "regulator-fixed";
		enable-active-high;
		gpio = <&gpio3 20 GPIO_ACTIVE_HIGH>;
		regulator-name = "3P3V";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
		regulator-ramp-delay = <33>; /* need 100ms: delay = (new_uV - old_uV) / ramp_delay */
	};

	reg_5p0v: 5p0v {
		compatible = "regulator-fixed";
		regulator-name = "5P0V";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		regulator-always-on;
	};

	reg_vddio_sd0: vddio-sd0 {
		compatible = "regulator-fixed";
		regulator-name = "vddio-sd0";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
	};
};

&auart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&auart0_3pins_a>;
	fsl,rs485-uart;
	status = "okay";
};

&auart4 {
	pinctrl-names = "default";
	pinctrl-0 = <&auart4_3pins_a>;
	fsl,rs485-uart;
	status = "okay";
};

&duart {
	pinctrl-names = "default";
	pinctrl-0 = <&duart_pins_a>;
	status = "okay";
};

&gpio0 {
	pinctrl-names = "default";
	pinctrl-0 = <&gpio0_pins_a>;
	gpio-line-names =
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "energymanager:vbus:enable", "energymanager:vbus:fault#", "",
		"", "", "", "";

	hw-rev-0-hog {
		gpio-hog;
		gpios = <0 GPIO_ACTIVE_HIGH>;
		input;
	};

	hw-rev-1-hog {
		gpio-hog;
		gpios = <1 GPIO_ACTIVE_HIGH>;
		input;
	};

	hw-rev-2-hog {
		gpio-hog;
		gpios = <2 GPIO_ACTIVE_HIGH>;
		input;
	};

	hw-ver-0-hog {
		gpio-hog;
		gpios = <3 GPIO_ACTIVE_HIGH>;
		input;
	};

	hw-ver-1-hog {
		gpio-hog;
		gpios = <4 GPIO_ACTIVE_HIGH>;
		input;
	};

	hw-ver-2-hog {
		gpio-hog;
		gpios = <5 GPIO_ACTIVE_HIGH>;
		input;
	};

	vbus-sw-hog {
		gpio-hog;
		gpios = <27 GPIO_ACTIVE_HIGH>;
		line-name = "VBUS_SW";
		output-low;
	};
};

&gpio3 {
	gpio-line-names =
		"", "", "", "",
		"", "energymanager:mb:enable#", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "",
		"", "", "", "";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins_a>;
	clock-frequency = <400000>;
	status = "okay";

	eeprom@50 {
		compatible = "atmel,24c32";
		reg = <0x50>;
		read-only;
		vcc-supply = <&reg_3p3v>;
	};

	rtc@51 {
		compatible = "nxp,pcf85063tp";
		reg = <0x51>;
		ignore-oscillator-stop;
		quartz-load-femtofarads = <12500>;
	};
};

&lradc {
	status = "okay";
};

&mac0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mac0_pins_c>;
	clock-names = "ipg", "ahb";
	clocks = <&clks 57>, <&clks 57>;
	phy-connection-type = "rmii";
	status = "okay";

	fixedphy: fixed-link {
		speed = <100>;
		full-duplex;
	};
};

&pinctrl {
	auart0_3pins_a: auart03pinsgrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_AUART0_RX__AUART0_RX
			MX28_PAD_AUART0_TX__AUART0_TX
			MX28_PAD_AUART0_RTS__AUART0_RTS
		>;
		fsl,drive-strength = <MXS_DRIVE_4mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_DISABLE>;
	};

	auart4_3pins_a: auart43pinsgrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_SAIF0_BITCLK__AUART4_RX
			MX28_PAD_SAIF0_SDATA0__AUART4_TX
			MX28_PAD_SAIF0_LRCLK__AUART4_RTS
		>;
		fsl,drive-strength = <MXS_DRIVE_4mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_DISABLE>;
	};

	buttons: buttonsgrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_AUART1_RX__GPIO_3_4
		>;
		fsl,drive-strength = <MXS_DRIVE_4mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_DISABLE>;
	};

	gpio0_pins_a: gpio0grp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			/* revision/version pads */
			MX28_PAD_GPMI_D00__GPIO_0_0
			MX28_PAD_GPMI_D01__GPIO_0_1
			MX28_PAD_GPMI_D02__GPIO_0_2
			MX28_PAD_GPMI_D03__GPIO_0_3
			MX28_PAD_GPMI_D04__GPIO_0_4
			MX28_PAD_GPMI_D05__GPIO_0_5
			MX28_PAD_SAIF0_MCLK__GPIO_3_20
			/* energymanager:vbus:enable (VBUS_EN) */
			MX28_PAD_GPMI_WRN__GPIO_0_25
			/* energymanager:vbus:fault# (VBUS_FAULT#) */
			MX28_PAD_GPMI_ALE__GPIO_0_26
			/* VBUS_SW */
			MX28_PAD_GPMI_CLE__GPIO_0_27
		>;
		fsl,drive-strength = <MXS_DRIVE_8mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_DISABLE>;
	};

	led_pins_a: ledgpiogrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_SSP2_SCK__GPIO_2_16
			MX28_PAD_SSP2_MOSI__GPIO_2_17
			MX28_PAD_SSP2_MISO__GPIO_2_18
			MX28_PAD_SSP2_SS0__GPIO_2_19
			MX28_PAD_SSP2_SS1__GPIO_2_20
			MX28_PAD_SSP2_SS2__GPIO_2_21
		>;
		fsl,drive-strength = <MXS_DRIVE_4mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_DISABLE>;
	};

	mac0_enet_int: mac0intgrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_GPMI_D06__GPIO_0_6   /* ENET.INT# */
		>;
		fsl,drive-strength = <MXS_DRIVE_8mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_ENABLE>;
	};

	mac0_enet_reset: mac0resetgrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_GPMI_D07__GPIO_0_7   /* ENET.RST# */
		>;
		fsl,drive-strength = <MXS_DRIVE_8mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_ENABLE>;
	};

	mac0_pins_c: mac0grp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_ENET0_RX_EN__ENET0_RX_EN
			MX28_PAD_ENET0_RXD0__ENET0_RXD0
			MX28_PAD_ENET0_RXD1__ENET0_RXD1
			MX28_PAD_ENET0_TX_EN__ENET0_TX_EN
			MX28_PAD_ENET0_TXD0__ENET0_TXD0
			MX28_PAD_ENET0_TXD1__ENET0_TXD1
			MX28_PAD_ENET_CLK__CLKCTRL_ENET
		>;
		fsl,drive-strength = <MXS_DRIVE_8mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_ENABLE>;
	};

	mac0_smi_pins_a: mac0smigrp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_ENET0_MDC__GPIO_4_0  /* ENET.MDC */
			MX28_PAD_ENET0_MDIO__GPIO_4_1 /* ENET.MDIO */
		>;
		fsl,drive-strength = <MXS_DRIVE_8mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_ENABLE>;
	};

	spi3_pins_c: spi3grp@0 {
		reg = <0>;
		fsl,pinmux-ids = <
			MX28_PAD_GPMI_CE0N__SSP3_D0
			MX28_PAD_GPMI_CE1N__SSP3_D3
			MX28_PAD_GPMI_RDN__SSP3_SCK
			MX28_PAD_GPMI_RESETN__SSP3_CMD
			MX28_PAD_AUART1_TX__GPIO_3_5
		>;
		fsl,drive-strength = <MXS_DRIVE_8mA>;
		fsl,voltage = <MXS_VOLTAGE_HIGH>;
		fsl,pull-up = <MXS_PULL_DISABLE>;
	};
};

&ssp0 {
	compatible = "fsl,imx28-mmc";
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_8bit_pins_a>;
	bus-width = <8>;
	non-removable;
	no-sd;
	no-sdio;
	vmmc-supply = <&reg_vddio_sd0>;
	status = "okay";
};

&ssp3 {
	compatible = "fsl,imx28-spi";
	pinctrl-names = "default";
	pinctrl-0 = <&spi3_pins_c>;
	status = "okay";

	spidev@0 {
		compatible = "tq,teridian";
		reg = <0>;
		spi-max-frequency = <1000000>;
	};
};

&usb1 {
	disable-over-current;
	dr_mode = "host";
	vbus-supply = <&reg_5p0v>;
	status = "okay";
};

&usbphy1 {
	status = "okay";
};
